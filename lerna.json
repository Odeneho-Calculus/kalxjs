{
    "packages": [
        "packages/*"
    ],
    "version": "independent",
    "npmClient": "npm",
    "command": {
        "publish": {
            "conventionalCommits": true,
            "access": "public",
            "ignoreChanges": [
                "*.md"
            ],
            "message": "chore(release): publish",
            "registry": "https://registry.npmjs.org/",
            "npmClientArgs": [
                "--legacy-peer-deps"
            ]
        },
        "bootstrap": {
            "hoist": true,
            "npmClientArgs": [
                "--no-package-lock",
                "--legacy-peer-deps"
            ]
        }
    }
}